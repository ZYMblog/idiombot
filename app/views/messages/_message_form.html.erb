<%= form_for message, remote: true, authenticity_token: true do |f| %>
  <%= f.label '请输入成语' %>:
  <%= f.text_area :content, class: "form-control", placeholder: '回车键发送', data: {textarea: "message"} %>

  <%= f.hidden_field :chat_id, value: chat.id %>
  <%= f.submit "send", class: "btn btn-primary", style: "display: none", value: "发送", data: {send: "message"} %>
<% end %>
